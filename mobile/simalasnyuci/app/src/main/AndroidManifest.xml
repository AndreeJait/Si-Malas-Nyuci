<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="student.kelompok_6.simalasnyuci">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:requestLegacyExternalStorage="true"
        android:supportsRtl="true"
        android:theme="@style/Theme.SiMalasNyuci"
        android:usesCleartextTraffic="true">
        <activity android:name=".pemilik.TambahCucianActivity"></activity>
        <activity android:name=".pegawai.PegawaiActivity" />
        <activity android:name=".pemilik.InformasiCucianActivity" />
        <activity android:name=".pemilik.ListPegawaiActivity" />
        <activity
            android:name=".pemilik.DashboardActivity"
            android:label="@string/title_activity_dashboard"
            android:theme="@style/Theme.SiMalasNyuci.NoActionBar" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>